@using Volo.Abp.Localization
@using System.Globalization
@using Microsoft.Extensions.Hosting
@using Volo.Abp.AspNetCore.Components.Web.Theming.Bundling
@inject IHostEnvironment Env
@{
    var rtl = CultureHelper.IsRtl ? "rtl" : string.Empty;
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name" dir="@rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DC OS - Dogan Consult Operating System</title>
    <base href="/" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome 6 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" 
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous">

    <AbpStyles />

    <!-- DC OS Custom Global Styles with RTL Support -->
    <link href="global-styles.css" rel="stylesheet" />
    
    <!-- DC OS Dashboard Redesign - Brand Tokens & Visual System -->
    <link href="css/dashboard-redesign.css" rel="stylesheet" />
    
    <!-- DC OS Icon System - Unified Icon Management -->
    <link href="css/icon-system.css" rel="stylesheet" />
    
    <!-- DC OS Theme System - Multiple Color Themes -->
    <link href="css/themes.css" rel="stylesheet" />

    <HeadOutlet @rendermode="InteractiveServer" />

</head>
<body>

    <Routes @rendermode="InteractiveServer" />

    <AbpScripts />

    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- SweetAlert2 for better notifications -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- DG.OS Theme Loader -->
    <script src="dgTheme.js"></script>

    <!-- DC OS Theme Manager - Enhanced theme switching -->
    <script src="js/theme-manager.js"></script>
    
    <!-- RTL Support - Dynamic direction switching -->
    <script src="js/rtl-support.js"></script>

    <script src="_framework/blazor.web.js"></script>

    <div id="blazor-error-ui">
        @if (Env.IsDevelopment())
        {
            <text>An unhandled exception has occurred. See browser dev tools for details.</text>
        }
        else if (Env.IsStaging() || Env.IsProduction())
        {
            <text>An error has occurred. This application may no longer respond until reloaded.</text>
        }
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

</body>
</html>
