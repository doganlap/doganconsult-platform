@page "/sbg/sample"
@using DoganConsult.Workspace.Features
@using DoganConsult.Web.Blazor.Components.Pages
@inherits WebComponentBase

<PageTitle>SBG Sample Module</PageTitle>

<FeatureGate FeatureName="@DgFeatures.Modules.Sbg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-building me-2"></i>Saudi Business Gate - Sample Module
                        </h4>
                        <p class="text-muted mb-0">This is a demonstration of the plugin architecture.</p>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Welcome to SBG Sample Module!</strong>
                            <p class="mb-0 mt-2">
                                This page is only visible when the <code>DG.Modules.SBG</code> feature is enabled for your tenant.
                                This demonstrates how modules can contribute to the platform shell using the plugin architecture.
                            </p>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5><i class="fas fa-puzzle-piece me-2"></i>Plugin Architecture</h5>
                                        <p>
                                            This module implements <code>IDgModuleUiContributor</code> to contribute:
                                        </p>
                                        <ul>
                                            <li>Menu items (visible in navigation)</li>
                                            <li>Dashboard widgets (visible on home page)</li>
                                        </ul>
                                        <p class="mb-0">
                                            All contributions are automatically feature-gated and only appear when the SBG module is enabled.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5><i class="fas fa-shield-alt me-2"></i>Feature Gating</h5>
                                        <p>
                                            This page uses the <code>FeatureGate</code> component to protect access:
                                        </p>
                                        <ul>
                                            <li>Direct URL access is blocked if feature is disabled</li>
                                            <li>Menu items are hidden when feature is disabled</li>
                                            <li>Dashboard widgets are filtered automatically</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Sub-Features</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center mb-3">
                                                    <i class="fas fa-shopping-cart fa-2x text-primary me-3"></i>
                                                    <div>
                                                        <h6 class="mb-0">Procurement</h6>
                                                        <small class="text-muted">
                                                            Feature: <code>@DgFeatures.SubFeatures.Sbg.Procurement</code>
                                                        </small>
                                                    </div>
                                                </div>
                                                <p class="ms-5">
                                                    Access the Procurement sub-feature at <a href="/sbg/sample/procurement">/sbg/sample/procurement</a>
                                                </p>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center mb-3">
                                                    <i class="fas fa-file-contract fa-2x text-success me-3"></i>
                                                    <div>
                                                        <h6 class="mb-0">Contracts</h6>
                                                        <small class="text-muted">
                                                            Feature: <code>@DgFeatures.SubFeatures.Sbg.Contracts</code>
                                                        </small>
                                                    </div>
                                                </div>
                                                <p class="ms-5">
                                                    Access the Contracts sub-feature at <a href="/sbg/sample/contracts">/sbg/sample/contracts</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                            <a href="/admin/features" class="btn btn-primary">
                                <i class="fas fa-cog me-2"></i>Manage Features
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</FeatureGate>

