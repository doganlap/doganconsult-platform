@page "/sbg/sample/contracts"
@using DoganConsult.Workspace.Features
@using DoganConsult.Web.Blazor.Components.Pages
@inherits WebComponentBase

<PageTitle>SBG Contracts</PageTitle>

<FeatureGate FeatureName="@DgFeatures.SubFeatures.Sbg.Contracts">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-file-contract me-2"></i>SBG Contracts
                        </h4>
                        <p class="text-muted mb-0">Contract management sub-feature of SBG module.</p>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Contracts Feature Enabled!</strong>
                            <p class="mb-0 mt-2">
                                This page is only accessible when the <code>@DgFeatures.SubFeatures.Sbg.Contracts</code> sub-feature is enabled.
                            </p>
                        </div>

                        <div class="card bg-light mt-3">
                            <div class="card-body">
                                <h5>Sample Contracts Content</h5>
                                <p>This is a demonstration of a sub-feature page. In a real implementation, this would contain:</p>
                                <ul>
                                    <li>Contract creation and management</li>
                                    <li>Contract templates</li>
                                    <li>Contract lifecycle tracking</li>
                                    <li>Renewal reminders</li>
                                    <li>Compliance monitoring</li>
                                </ul>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/sbg/sample" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to SBG Sample
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</FeatureGate>

