@page "/audit-logs"
@using DoganConsult.Audit.AuditLogs
@using DoganConsult.Web.Blazor.Services
@using Volo.Abp.Application.Dtos

<PageTitle>Audit Logs</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-history me-2"></i>Audit Logs
                        </h4>
                        <button class="btn btn-outline-primary" @onclick="RefreshLogs">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                </div>
                
                <div class="card-body">
                    <!-- Filters -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <label class="form-label">Filter by Action</label>
                            <select class="form-select" @bind="FilterAction" @bind:after="LoadLogs">
                                <option value="">All Actions</option>
                                <option value="Create">Create</option>
                                <option value="Update">Update</option>
                                <option value="Delete">Delete</option>
                                <option value="Read">Read</option>
                                <option value="Login">Login</option>
                                <option value="Logout">Logout</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter by Entity</label>
                            <select class="form-select" @bind="FilterEntity" @bind:after="LoadLogs">
                                <option value="">All Entities</option>
                                <option value="Organization">Organization</option>
                                <option value="Workspace">Workspace</option>
                                <option value="Document">Document</option>
                                <option value="UserProfile">User Profile</option>
                                <option value="User">User</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter by Status</label>
                            <select class="form-select" @bind="FilterStatus" @bind:after="LoadLogs">
                                <option value="">All Statuses</option>
                                <option value="Success">Success</option>
                                <option value="Failure">Failure</option>
                                <option value="Warning">Warning</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Search User</label>
                            <input type="text" class="form-control" @bind="SearchUser" @bind:after="LoadLogs" placeholder="Search by username..." />
                        </div>
                    </div>

                    @if (Loading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading audit logs...</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Timestamp</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Entity</th>
                                        <th scope="col">User</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">IP Address</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (AuditLogItems?.Any() == true)
                                    {
                                        @foreach (var log in AuditLogItems)
                                        {
                                            <tr>
                                                <td>
                                                    <small>@log.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-@GetActionColor(log.Action)">
                                                        <i class="@GetActionIcon(log.Action) me-1"></i>@log.Action
                                                    </span>
                                                </td>
                                                <td>@log.EntityType</td>
                                                <td>
                                                    <i class="fas fa-user me-1"></i>@(log.UserName ?? "System")
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(log.Description))
                                                    {
                                                        @(log.Description.Length > 50 ? log.Description.Substring(0, 50) + "..." : log.Description)
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-@GetStatusColor(log.Status)">
                                                        @(log.Status ?? "Unknown")
                                                    </span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@(log.IpAddress ?? "-")</small>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewDetails(log)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                <i class="fas fa-history fa-3x mb-3"></i>
                                                <p class="mb-0">No audit logs found</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (TotalCount > PageSize)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(CurrentPage <= 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="PreviousPage">Previous</button>
                                    </li>
                                    @for (int i = 1; i <= Math.Min(TotalPages, 10); i++)
                                    {
                                        var pageNum = i;
                                        <li class="page-item @(CurrentPage == pageNum ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                        </li>
                                    }
                                    <li class="page-item @(CurrentPage >= TotalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="NextPage">Next</button>
                                    </li>
                                </ul>
                            </nav>
                        }
                        
                        <div class="text-muted text-center">
                            Showing @((CurrentPage - 1) * PageSize + 1) - @Math.Min(CurrentPage * PageSize, TotalCount) of @TotalCount records
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
@if (ShowDetailsModal && SelectedLog != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-history me-2"></i>Audit Log Details
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailsModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Timestamp:</strong> @SelectedLog.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                            <p><strong>Action:</strong> <span class="badge bg-@GetActionColor(SelectedLog.Action)">@SelectedLog.Action</span></p>
                            <p><strong>Entity Type:</strong> @SelectedLog.EntityType</p>
                            <p><strong>Entity ID:</strong> @(SelectedLog.EntityId ?? "N/A")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>User:</strong> @(SelectedLog.UserName ?? "System")</p>
                            <p><strong>User ID:</strong> @(SelectedLog.UserId ?? "N/A")</p>
                            <p><strong>Status:</strong> <span class="badge bg-@GetStatusColor(SelectedLog.Status)">@(SelectedLog.Status ?? "Unknown")</span></p>
                            <p><strong>IP Address:</strong> @(SelectedLog.IpAddress ?? "N/A")</p>
                        </div>
                    </div>
                    <hr />
                    <p><strong>Description:</strong></p>
                    <p>@(SelectedLog.Description ?? "No description")</p>
                    
                    @if (!string.IsNullOrEmpty(SelectedLog.Changes))
                    {
                        <hr />
                        <p><strong>Changes:</strong></p>
                        <pre class="bg-light p-3 rounded"><code>@SelectedLog.Changes</code></pre>
                    }
                    
                    @if (!string.IsNullOrEmpty(SelectedLog.UserAgent))
                    {
                        <hr />
                        <p><strong>User Agent:</strong></p>
                        <small class="text-muted">@SelectedLog.UserAgent</small>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
