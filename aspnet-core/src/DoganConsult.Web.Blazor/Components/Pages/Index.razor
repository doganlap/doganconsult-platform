@page "/"
@using DoganConsult.Web.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@inherits WebComponentBase

<PageTitle>DC OS - Dashboard</PageTitle>

<div class="dc-content">
    <!-- Welcome Card -->
    <div class="dc-welcome-card">
        <h5>Welcome back, @CurrentUserTitle!</h5>
        <p>Your dashboard is ready with the latest updates and insights.</p>
    </div>

    <!-- Executive Summary -->
    <div class="dc-executive-summary mb-4">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="dc-summary-section">
                    <div class="dc-summary-header">
                        <h6>Active Items</h6>
                        <i class="fas fa-play-circle text-primary"></i>
                    </div>
                    <div class="dc-summary-metric">
                        <div class="dc-metric-value">12</div>
                        <div class="dc-metric-label">Running Now</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dc-summary-section">
                    <div class="dc-summary-header">
                        <h6>Pending Tasks</h6>
                        <i class="fas fa-clock text-warning"></i>
                    </div>
                    <div class="dc-summary-metric">
                        <div class="dc-metric-value">5</div>
                        <div class="dc-metric-label">Requires Attention</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dc-summary-section">
                    <div class="dc-summary-header">
                        <h6>Success Rate</h6>
                        <i class="fas fa-chart-line text-success"></i>
                    </div>
                    <div class="dc-summary-metric">
                        <div class="dc-metric-value">94%</div>
                        <div class="dc-metric-label">Completion Rate</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dc-summary-section">
                    <div class="dc-summary-header">
                        <h6>This Month</h6>
                        <i class="fas fa-calendar text-info"></i>
                    </div>
                    <div class="dc-summary-metric">
                        <div class="dc-metric-value">8</div>
                        <div class="dc-metric-label">New Requests</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Cards -->
    <div class="dc-action-cards mb-4">
        <div class="dc-action-card">
            <h6><i class="fas fa-calendar-alt me-2 text-primary"></i>Request Demo</h6>
            <p>Schedule a personalized demonstration of our platform capabilities.</p>
            <button class="btn btn-primary" @onclick='() => NavigateTo("/demos/create")'>
                <i class="fas fa-plus me-2"></i>Schedule Demo
            </button>
        </div>
        <div class="dc-action-card">
            <h6><i class="fas fa-plus me-2 text-success"></i>Create Workspace</h6>
            <p>Start a new workspace for your team collaboration and projects.</p>
            <button class="btn btn-success" @onclick='() => NavigateTo("/workspaces/create")'>
                <i class="fas fa-folder-plus me-2"></i>New Workspace
            </button>
        </div>
        <div class="dc-action-card">
            <h6><i class="fas fa-users me-2 text-info"></i>Manage Organizations</h6>
            <p>View and manage your organizations, teams, and members.</p>
            <button class="btn btn-info" @onclick='() => NavigateTo("/organizations")'>
                <i class="fas fa-building me-2"></i>View Organizations
            </button>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="dc-recent-activities">
        <div class="dc-summary-header">
            <h6>Recent Activities</h6>
            <button class="btn btn-sm btn-outline-primary" @onclick='() => NavigateTo("/activities")'>
                View All
            </button>
        </div>
        <div class="mt-3">
            <div class="dc-activity-item">
                <div class="dc-activity-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="dc-activity-content">
                    <div class="dc-activity-title">New user registered</div>
                    <div class="dc-activity-time">2 hours ago</div>
                </div>
            </div>
            <div class="dc-activity-item">
                <div class="dc-activity-icon">
                    <i class="fas fa-file-upload"></i>
                </div>
                <div class="dc-activity-content">
                    <div class="dc-activity-title">Document uploaded</div>
                    <div class="dc-activity-time">5 hours ago</div>
                </div>
            </div>
            <div class="dc-activity-item">
                <div class="dc-activity-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="dc-activity-content">
                    <div class="dc-activity-title">Task completed</div>
                    <div class="dc-activity-time">1 day ago</div>
                </div>
            </div>
        </div>
    </div>
</div>
