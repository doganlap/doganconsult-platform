@page "/ai-chat"
@using DoganConsult.AI.Application.Contracts.Services
@using DoganConsult.Web.Blazor.Services

<PageTitle>AI Assistant</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-robot me-2"></i>AI Assistant
                        </h4>
                        <div>
                            <button class="btn btn-outline-secondary btn-sm me-2" @onclick="ClearChat">
                                <i class="fas fa-trash me-1"></i>Clear Chat
                            </button>
                            <button class="btn btn-outline-primary btn-sm" @onclick="StartNewThread">
                                <i class="fas fa-plus me-1"></i>New Conversation
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="row">
                        <!-- Chat Area -->
                        <div class="col-md-8">
                            <div class="chat-container border rounded p-3" style="height: 500px; overflow-y: auto;" @ref="chatContainer">
                                @if (ChatMessages.Count == 0)
                                {
                                    <div class="text-center text-muted py-5">
                                        <i class="fas fa-robot fa-4x mb-3"></i>
                                        <h5>Welcome to AI Assistant</h5>
                                        <p>Ask me anything about compliance, auditing, risk assessment, or document analysis.</p>
                                        <div class="mt-4">
                                            <h6>Quick Actions:</h6>
                                            <div class="d-flex flex-wrap justify-content-center gap-2 mt-2">
                                                <button class="btn btn-outline-primary btn-sm" @onclick='() => SendQuickMessage("Explain GDPR compliance requirements")'>
                                                    <i class="fas fa-shield-alt me-1"></i>GDPR Compliance
                                                </button>
                                                <button class="btn btn-outline-success btn-sm" @onclick='() => SendQuickMessage("What are the best practices for internal audit?")'>
                                                    <i class="fas fa-clipboard-check me-1"></i>Audit Best Practices
                                                </button>
                                                <button class="btn btn-outline-warning btn-sm" @onclick='() => SendQuickMessage("How to assess operational risk?")'>
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Risk Assessment
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var message in ChatMessages)
                                    {
                                        <div class="mb-3 @(message.IsUser ? "text-end" : "")">
                                            <div class="d-inline-block p-3 rounded @(message.IsUser ? "bg-primary text-white" : "bg-light")" 
                                                 style="max-width: 80%;">
                                                @if (!message.IsUser)
                                                {
                                                    <div class="d-flex align-items-center mb-2">
                                                        <i class="fas fa-robot me-2"></i>
                                                        <strong>AI Assistant</strong>
                                                    </div>
                                                }
                                                <div style="white-space: pre-wrap;">@message.Content</div>
                                                <small class="@(message.IsUser ? "text-white-50" : "text-muted") d-block mt-1">
                                                    @message.Timestamp.ToString("HH:mm")
                                                    @if (!message.IsUser && message.ResponseTimeMs > 0)
                                                    {
                                                        <span class="ms-2">(@message.ResponseTimeMs ms)</span>
                                                    }
                                                </small>
                                            </div>
                                        </div>
                                    }
                                    
                                    @if (IsThinking)
                                    {
                                        <div class="mb-3">
                                            <div class="d-inline-block p-3 rounded bg-light">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-robot me-2"></i>
                                                    <strong>AI Assistant</strong>
                                                </div>
                                                <div class="mt-2">
                                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                                    Thinking...
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            
                            <!-- Input Area -->
                            <div class="mt-3">
                                <div class="input-group">
                                    <textarea class="form-control" 
                                              @bind="CurrentMessage" 
                                              @onkeypress="HandleKeyPress"
                                              placeholder="Type your message..." 
                                              rows="2"
                                              disabled="@IsThinking"></textarea>
                                    <button class="btn btn-primary" @onclick="SendMessage" disabled="@(IsThinking || string.IsNullOrWhiteSpace(CurrentMessage))">
                                        <i class="fas fa-paper-plane"></i>
                                    </button>
                                </div>
                                <small class="text-muted">Press Ctrl+Enter to send</small>
                            </div>
                        </div>
                        
                        <!-- Side Panel -->
                        <div class="col-md-4">
                            <!-- AI Features -->
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-magic me-2"></i>AI Features</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-info btn-sm" @onclick="OpenDocumentAnalysis">
                                            <i class="fas fa-file-search me-2"></i>Document Analysis
                                        </button>
                                        <button class="btn btn-outline-success btn-sm" @onclick="OpenComplianceCheck">
                                            <i class="fas fa-check-double me-2"></i>Compliance Check
                                        </button>
                                        <button class="btn btn-outline-warning btn-sm" @onclick="OpenRiskAssessment">
                                            <i class="fas fa-chart-pie me-2"></i>Risk Assessment
                                        </button>
                                        <button class="btn btn-outline-secondary btn-sm" @onclick="OpenAuditSummary">
                                            <i class="fas fa-file-alt me-2"></i>Audit Summary
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Conversation Info -->
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Session Info</h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-1"><strong>Thread ID:</strong></p>
                                    <p class="text-muted small">@(CurrentThreadId ?? "Not started")</p>
                                    <p class="mb-1"><strong>Messages:</strong> @ChatMessages.Count</p>
                                    <p class="mb-0"><strong>Total Tokens:</strong> ~@EstimatedTokens</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Document Analysis Modal -->
@if (ShowDocumentAnalysisModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-file-search me-2"></i>Document Analysis</h5>
                    <button type="button" class="btn-close" @onclick="() => ShowDocumentAnalysisModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Document Content</label>
                        <textarea class="form-control" @bind="DocumentAnalysisContent" rows="6" placeholder="Paste document content here..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Document Type</label>
                        <select class="form-select" @bind="DocumentAnalysisType">
                            <option value="policy">Policy Document</option>
                            <option value="contract">Contract</option>
                            <option value="report">Report</option>
                            <option value="procedure">Procedure</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    
                    @if (DocumentAnalysisResult != null)
                    {
                        <div class="alert alert-info">
                            <h6>Analysis Result</h6>
                            <p><strong>Summary:</strong> @DocumentAnalysisResult.Summary</p>
                            <p><strong>Confidence:</strong> @(DocumentAnalysisResult.ConfidenceScore * 100)%</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => ShowDocumentAnalysisModal = false">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="RunDocumentAnalysis" disabled="@AnalyzeLoading">
                        @if (AnalyzeLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Analyze
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Compliance Check Modal -->
@if (ShowComplianceModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-check-double me-2"></i>Compliance Check</h5>
                    <button type="button" class="btn-close" @onclick="() => ShowComplianceModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Organization Type</label>
                            <select class="form-select" @bind="ComplianceOrgType">
                                <option value="financial">Financial Services</option>
                                <option value="healthcare">Healthcare</option>
                                <option value="technology">Technology</option>
                                <option value="retail">Retail</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sector</label>
                            <input class="form-control" @bind="ComplianceSector" placeholder="e.g., Banking, Insurance" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Data to Check</label>
                        <textarea class="form-control" @bind="ComplianceData" rows="4" placeholder="Enter data or process description..."></textarea>
                    </div>
                    
                    @if (ComplianceResult != null)
                    {
                        <div class="alert @(ComplianceResult.Status == "Compliant" ? "alert-success" : "alert-warning")">
                            <h6>Compliance Result: @ComplianceResult.Status</h6>
                            <p><strong>Risk Level:</strong> @ComplianceResult.RiskLevel</p>
                            <p><strong>Summary:</strong> @ComplianceResult.Summary</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => ShowComplianceModal = false">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="RunComplianceCheck" disabled="@AnalyzeLoading">
                        @if (AnalyzeLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Check Compliance
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Risk Assessment Modal -->
@if (ShowRiskModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-chart-pie me-2"></i>Risk Assessment</h5>
                    <button type="button" class="btn-close" @onclick="() => ShowRiskModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Risk Category</label>
                            <select class="form-select" @bind="RiskCategory">
                                <option value="operational">Operational Risk</option>
                                <option value="financial">Financial Risk</option>
                                <option value="compliance">Compliance Risk</option>
                                <option value="strategic">Strategic Risk</option>
                                <option value="technology">Technology Risk</option>
                                <option value="reputational">Reputational Risk</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Organization Context</label>
                            <input class="form-control" @bind="RiskOrgContext" placeholder="Brief org context" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Risk Description</label>
                        <textarea class="form-control" @bind="RiskDescription" rows="4" placeholder="Describe the risk scenario..."></textarea>
                    </div>
                    
                    @if (RiskResult != null)
                    {
                        <div class="alert @(GetRiskAlertClass(RiskResult.RiskLevel))">
                            <h6>Risk Assessment Result</h6>
                            <p><strong>Overall Risk Score:</strong> @RiskResult.OverallRiskScore</p>
                            <p><strong>Risk Level:</strong> @RiskResult.RiskLevel</p>
                            <p><strong>Assessment:</strong> @RiskResult.Assessment</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => ShowRiskModal = false">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="RunRiskAssessment" disabled="@AnalyzeLoading">
                        @if (AnalyzeLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Assess Risk
                    </button>
                </div>
            </div>
        </div>
    </div>
}
